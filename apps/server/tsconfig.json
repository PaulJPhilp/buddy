{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "module": "preserve",
    "noEmit": true,
    "lib": [
      "es2022"
    ],
    "paths": {
      "@api/core": [
        "../../packages/api"
      ],
      "@api/*": [
        "../../packages/api/*"
      ],
      "@server/*": [
        "./src/*"
      ],
      "@client/*": [
        "../client/src/*"
      ],
      "@components/*": [
        "../../packages/ui/src/components/*"
      ],
      "@buddy/ui": [
        "../../packages/ui/src/components"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "src/test-direct.tsold",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
